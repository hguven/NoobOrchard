<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>互联网站内容管理系统</title>
</head>
<body id="layout_body" class="easyui-layout" style="margin:0px;">
    <div region="north" border="false" class="header-bg" style="overflow-y: hidden;">
        <div id="header-inner">
            <table cellpadding="0" cellspacing="0" style="width:100%;">
                <tr>
                    <td style="padding-left:10px;text-align:left;vertical-align:bottom;padding-bottom:6px;">
                        @*<img border="0" src="../../Image/logoheader.gif" style="width:122px;height:40px;" />*@
                    </td>
                    <td></td>
                    <td style="padding-right:5px;text-align:right;vertical-align:bottom;">
                        <div style="float:right;text-align:center; margin-top:6px;padding-right:25px;margin-bottom:2px;">
                            <a id="pageReload" href="javascript:void(0)" onclick="reloadTabData()" class="easyui-linkbutton top" data-options="iconCls:'icon-reload',plain:true" style="margin-right:5px;" title="点击刷新当前选项卡">刷新</a>
                            <label id='nickname' style="color:#fff">欢迎您：@ViewBag.UserName【@ViewBag.AdminName】</label>
                            <label id="lbl_tick"></label>&nbsp;&nbsp;&nbsp;&nbsp;
                            <a href="javascript:void(0)" onclick="changePassword()" class="top">修改密码</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="javascript:void(0)" onclick="logout()" class="top" id='logout'>退出系统</a>
                        </div>
                        <div id="div_topMenu">
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    @*<div data-options="region:'south',split:true" style="height:50px;display:none;" ></div>
    <div data-options="region:'east',split:true" title="East" style="width:1px;display:none;">
    </div>*@
    <div region="west" border="false" split="true" title="菜单" style="width:150px;" id="div_panelWest">
        <div id="nav" class="easyui-accordion" data-options="fit:true,border:false">

        </div>
    </div>
    <div region="center" border="false" data-options="region:'center',title:'内容管理系统',iconCls:'icon-ok'">
        <div id="tt" class="easyui-tabs" fit="true" border="false" plain="true">
            <div title="首页"><iframe scrolling="auto" src="/Home/Welcome" frameborder="0" width="100%" height="98%"></iframe></div>
        </div>
    </div>
    <div id="tabsMenu" class="easyui-menu" style="width:120px;">
        <div name="closeCurrent">关闭标签页</div>
        <div name="closeOther">关闭其他</div>
        <div name="closeAll">关闭所有</div>
    </div>
    <script src="@Url.Content(ViewBag.RootUrl + "Scripts/Admin/Index.js")" type="text/javascript"></script>
</body>
</html>
<script type="text/javascript">
    if (self != top) { top.location = self.location; }
    var menuDatas= @Html.Raw(ViewBag.MenuData);
    var rootUrl='@ViewBag.RootUrl';
</script>