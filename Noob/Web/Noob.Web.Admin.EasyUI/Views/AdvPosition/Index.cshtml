@{
    ViewBag.Title = "广告位";
}
<style type="text/css">
    .tdTitle {
        padding-left: 10px;
    }
</style>
<div data-options="region:'north',border:true,iconCls:'icon-search'" title="查询" class="divNorth">
    <table>
        <tr>
            <td>广告位编号：</td>
            <td><input type="text" id="txtSearchAdvPositionCode" name="SearchAdvPositionCode" class="easyui-textbox" /></td>
            <td class="tdTitle">广告位名称：</td>
            <td><input type="text" id="txtSearchAdvPositionName" name="SearchAdvPositionName" class="easyui-textbox" /></td>
            <td class="tdTitle">广告位状态：</td>
            <td>
                <select name="Status" id="sltSearchStatus" style="width:126px;" class="easyui-combobox " editable="false" data-options='panelHeight:50'>
                    <option value="">请选择</option>
                    <option value="1">启用</option>
                    <option value="0">禁用</option>
                </select>
            </td>
            <td class="tdTitle"><a href="#" id="btn_search" class="easyui-linkbutton" data-options="iconCls:'icon-search'" style="width:80px" onclick="searchData()">查 询</a></td>
        </tr>
    </table>
</div>
<div data-options="region:'center',border:false" class="divCenter">
    <table id="dg"></table>
    <div id="tbar" style="text-align:right">
        <a href="javascript:void(0)" onclick="createModule()" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true" style="display:@ViewBag.Create">添加</a>
        <a href="javascript:void(0)" onclick="updateModule()" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true" style="display:@ViewBag.Edit">编辑</a>
        <a href="javascript:void(0)" onclick="deleteModule()" class="easyui-linkbutton" data-options="iconCls:'icon-cut',plain:true" style="display:@ViewBag.Delete">删除</a>
    </div>
</div>
<script type="text/javascript">
    var isEdit = true;
    var isUpdateStatus = true;
</script>
<script type="text/javascript" src="@Url.Content(ViewBag.RootUrl + "Scripts/Admin/CMS/AdvPosition.js")"></script>

