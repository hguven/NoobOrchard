{
    <script type="text/javascript" src="@Url.Content(ViewBag.RootUrl + "Scripts/Admin/Admin/Authorize.js")"></script>
}

@section BodyScripts
{
    <script type="text/javascript">
        var id=@ViewBag.id;
        var type=@ViewBag.type;
    </script>
}