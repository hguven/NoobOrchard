            <div class="note note-danger">
                <p> NOTE: The below datatable is not connected to a real database so the filter and sorting is just simulated for demo purposes only. </p>
            </div>
            <!-- Begin: TreeGrid  -->
            <div class="portlet light portlet-fit portlet-datatable ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject font-dark sbold uppercase">用户组管理</span>
                    </div>
                    <div class="page-actions" style="float:right;">
                        <div class="btn-group open" id="addAction" data-url="../../Group/Create">
                            <button type="button" class="btn btn-circle btn-outline green dropdown-toggle" aria-expanded="false">
                                <i class="fa fa-plus"></i>&nbsp;
                                <span class="hidden-sm hidden-xs">添加&nbsp;</span>&nbsp;
                            </button>
                        </div>

                        <div class="btn-group open" id="deleteAction">
                            <button type="button" class="btn btn-circle btn-outline red dropdown-toggle" aria-expanded="false">
                                <i class="fa fa-trash"></i>&nbsp;
                                <span class="hidden-sm hidden-xs">删除&nbsp;</span>&nbsp;
                            </button>
                        </div>
                    </div>

                </div>
                <div class="portlet-body">
                    <div class="table-container">
                        <div class="table-actions-wrapper">
                            <span> </span>
                        </div>
                        <table class="table table-striped table-bordered table-hover table-checkable" id="dg">
                            <thead>
                                <tr role="row" class="heading">
                                    <th width="2%">
                                        <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline" onclick="handleIdCheckAll(this,event);">
                                            <input type="checkbox" class="group-checkable" data-set=".checkboxes" onclick="void (0);" />
                                            <span>
                                                <label></label>
                                            </span>
                                        </label>
                                    </th>
                                    <th style="width:150px;">用户组名称</th>
                                    <th style="width:120px;">用户组类型</th>
                                    <th style="width:80px;">排序大小</th>
                                    <th style="width:130px;">创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <!-- small.modal -->
                    <div class="modal fade modal-dialog modal-sm" id="small-modal" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                <h4 class="modal-title">确认</h4>
                            </div>
                            <div class="modal-body">您确认要删除吗?</div>
                            <div class="modal-footer">
                                <button type="button" class="btn dark btn-outline" data-dismiss="modal">取消</button>
                                <button type="button" class="btn green" onclick="deleteData(this);" data-id="0" id="btnDelete">确认</button>
                            </div>
                        </div>
                    </div>
                    <!-- small.modal -->
                    <!-- ajax -->
                    <div id="ajax-modal" class="modal fade" tabindex="-1"> </div>
                </div>
            </div>
            <!-- End: TreeGrid -->
        </div>
    </div>
