
@{
    ViewBag.Title = "系统后台登录";
}
<div class="page page-core page-login">
    <div class="text-center"><h3 class="text-light text-white"><span class="text-lightred">M</span>系统后台管理</h3></div>
    <div class="container w-420 p-15 bg-white mt-40 text-center">
        <h2 class="text-light text-greensea">系统后台登录</h2>
        <form name="form" class="form-validation mt-20" novalidate="">
            <div class="form-group">
                <input type="email" class="form-control underline-input" placeholder="用户名">
            </div>
            <div class="form-group">
                <input type="password" placeholder="密码" class="form-control underline-input">
            </div>
            <div class="form-group text-left mt-20">
                <a href="index.html" class="btn btn-greensea b-0 br-2 mr-5">登录</a>
                <label class="checkbox checkbox-custom-alt checkbox-custom-sm inline-block">
                    <input type="checkbox"><i></i> Remember me
                </label>
                <a href="forgotpass.html" class="pull-right mt-10">忘记密码?</a>
            </div>
        </form>
        <hr class="b-3x">
        <div class="bg-slategray lt wrap-reset mt-40">
            <p class="m-0">
                <a href="signup.html" class="text-uppercase">注册</a>
            </p>
        </div>
    </div>
</div>
